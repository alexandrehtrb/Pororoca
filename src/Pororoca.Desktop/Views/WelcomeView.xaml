<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Pororoca.Desktop.ViewModels;assembly=Pororoca.Desktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:v="using:Pororoca.Desktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:Pororoca.Desktop.Controls;assembly=Pororoca.Desktop"
    mc:Ignorable="d"
    d:DesignWidth="1350"
    d:DesignHeight="700"
    x:Class="Pororoca.Desktop.Views.WelcomeView"
    x:CompileBindings="True"
    x:DataType="vm:WelcomeViewModel"
    FontSize="16">

  <StackPanel
      Spacing="16"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Margin="24">

    <TextBlock
        Text="{Binding i18n.Welcome.Title, Mode=OneWay}"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        TextWrapping="Wrap"
        Classes="PageTitle"/>

    <controls:IconButton
        x:Name="btAddCollection"
        Margin="0,32,0,0"
        Icon="{StaticResource IconAddGeometry}"
        Text="{Binding i18n.Welcome.NewCollection, Mode=OneWay}"
        Command="{Binding AddNewCollectionCmd, Mode=OneWay}"/>

    <controls:IconButton
        x:Name="btImportCollection"
        Icon="{StaticResource IconImportGeometry}"
        Text="{Binding i18n.Welcome.ImportCollection, Mode=OneWay}"
        Command="{Binding ImportCollectionCmd, Mode=OneWay}"/>

    <controls:IconButton
        x:Name="btImportOpenAPI"
        Icon="{StaticResource IconImportGeometry}"
        Text="{Binding i18n.Welcome.ImportOpenAPI, Mode=OneWay}"
        Command="{Binding ImportOpenAPICmd, Mode=OneWay}"/>

    <controls:IconButton
        x:Name="btGoToWebsite"
        Icon="{StaticResource IconHttpGeometry}"
        Text="{Binding i18n.Welcome.OpenDocsWebsite, Mode=OneWay}"
        Command="{Binding GoToDocsWebSiteCmd, Mode=OneWay}"/>

    <controls:IconButton
        x:Name="btVisitGitHubRepo"
        Icon="{StaticResource IconGitHubGeometry}"
        Text="{Binding i18n.Welcome.VisitGitHubRepo, Mode=OneWay}"
        Command="{Binding VisitGitHubRepoCmd, Mode=OneWay}"/>

  </StackPanel>

</UserControl>