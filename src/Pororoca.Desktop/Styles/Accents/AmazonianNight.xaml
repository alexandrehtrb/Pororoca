<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pororoca.Desktop">
  <ResourceDictionary.ThemeDictionaries>
    <ResourceDictionary x:Key="{x:Static local:PororocaThemeManager.AmazonianNight}">
      <!-- System colours overrides below -->
      <Color x:Key="SystemAccentColorDark3">Black</Color>
      <Color x:Key="SystemAccentColorDark2">#2B1808</Color>
      <Color x:Key="SystemAccentColorDark1">#562F10</Color>
      <Color x:Key="SystemAccentColor">#814718</Color>
      <Color x:Key="SystemAccentColorLight1">#A55B1E</Color>
      <Color x:Key="SystemAccentColorLight2">#C26B24</Color>
      <Color x:Key="SystemAccentColorLight3">#D77728</Color>
      <Color x:Key="SystemErrorTextColor">#FF4D4D</Color>
      <!-- Custom colours below -->
      <Color x:Key="InputBackgroundValidationProblemColor">#66FECADA</Color>
      <Color x:Key="SystemInvertedAccentColor">#38C7AD</Color>
      <Color x:Key="SystemInvertedAccentColorLight1">#88DDCE</Color>
      <Color x:Key="SystemInvertedAccentColorLight2">#98E2D4</Color>
      <Color x:Key="MainWindowMenuColor">Black</Color>
      <Color x:Key="MainWindowBackgroundColor">#04538B</Color>
      <Color x:Key="MainWindowDarkerBackgroundColor">Black</Color>
      <Color x:Key="MainWindowSidebarColor">Black</Color>
      <Color x:Key="MainWindowSeparatorsColor">Black</Color>
      <Color x:Key="CurrentEnvironmentLabelColor">#99E3D5</Color>
      <Color x:Key="ListBoxBackgroundColor">Black</Color>
      <Color x:Key="ListBoxItemSelectedBackgroundColor">#562F10</Color>
      <Color x:Key="ResultsListBoxItemSelectedBackgroundColor">#292929</Color>
      <Color x:Key="DragAndDropItemDraggingColor">White</Color>
      
      <Thickness x:Key="ButtonSecondaryBorderThickness">0</Thickness>
      <Color x:Key="ButtonSecondaryBorderBrush">Transparent</Color>
      <Color x:Key="ButtonSecondaryHighlightBorderBrush">Transparent</Color>
      <Color x:Key="ButtonSecondaryBackgroundColor">Black</Color>
      <Color x:Key="ButtonSecondaryHighlightBackgroundColor">#292929</Color>

      <Color x:Key="WebSocketConnectedColor">#99E3D5</Color>
      <Color x:Key="WebSocketMessageFromClientPrimaryColor">#FF83D8</Color>
      <Color x:Key="WebSocketMessageFromServerPrimaryColor">Lime</Color>
      <Color x:Key="DefaultIconsColor">#F2F2F2</Color>
      <Color x:Key="DefaultTextForegroundColor">#F2F2F2</Color>
      <x:String x:Key="TextEditorTheme">Dark</x:String>
      <Color x:Key="TextEditorBackgroundColor">#1E1E1E</Color>
      <Color x:Key="TextEditorForegroundColor">#D4D4D4</Color>
      <SolidColorBrush x:Key="TextEditorHyperlinkForegroundBrush" Color="LightBlue"/>
      <SolidColorBrush x:Key="TextEditorRegularVariableForegroundBrush" Color="DarkGoldenrod"/>
      <SolidColorBrush x:Key="TextEditorPredefinedVariableForegroundBrush" Color="Goldenrod"/>
      <!-- don't rename key below -->
      <SolidColorBrush x:Key="TextControlSelectionHighlightColor" Color="#814718"/>
      <!-- value below sets hover variable popup max width -->
      <x:Double x:Key="FlyoutThemeMaxWidth">720</x:Double>
      <Color x:Key="TextEditorRegularVariablePopupForegroundColor">Goldenrod</Color>
      <Color x:Key="TextEditorPredefinedVariablePopupForegroundColor">Goldenrod</Color>
      <Color x:Key="TextEditorNoMatchingVariablePopupForegroundColor">LightSalmon</Color>
      <Color x:Key="ResponseCapturedValueTextColor">#99E3D5</Color>
      <!--Color x:Key="TreeViewItemTargetMovementHighlightColor">LawnGreen</Color-->
    </ResourceDictionary>
  </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>